{
  "name": "soulike-git-server",
  "version": "0.1.0",
  "description": "自定义 git 服务器实现",
  "main": "dist/index.ts",
  "author": "soulike",
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch": "tsc --watch",
    "start": "nodemon dist/index.js",
    "build": "tsc",
    "prestart": "yarn build",
    "check-type": "tsc --noEmit",
    "test": "jest",
    "test-ci": "jest -c jest.ci.config.js",
    "test-coverage": "jest --collectCoverage",
    "ci": "yarn check-type && yarn test-ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-type"
    }
  },
  "dependencies": {
    "@koa/router": "^8.0.1",
    "@types/fs-extra": "^8.0.1",
    "@types/imagemin": "^7.0.0",
    "@types/imagemin-webp": "^5.1.0",
    "@types/js-base64": "^2.3.1",
    "@types/koa": "^2.0.49",
    "@types/koa-session": "^5.10.1",
    "@types/koa__router": "^8.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^12.7.5",
    "@types/pg": "^7.11.1",
    "@types/signale": "^1.2.1",
    "@types/validator": "^10.11.3",
    "fs-extra": "^8.1.0",
    "imagemin": "^7.0.0",
    "imagemin-webp": "^5.1.0",
    "jest-mock-process": "^1.2.0",
    "js-base64": "^2.5.1",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-session": "^5.12.3",
    "mime-types": "^2.1.24",
    "pg": "^7.12.1",
    "signale": "^1.4.0",
    "typescript": "^3.6.3",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "@types/faker": "^4.1.6",
    "@types/jest": "^24.0.18",
    "faker": "^4.1.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "nodemon": "^2.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1"
  },
  "signale": {
    "displayDate": true,
    "displayTimestamp": true
  }
}
